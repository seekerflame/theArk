# n8n Workflow: AI Self-Improvement Loop
# Every 6 hours, AI analyzes system and proposes fixes

{
    "name": "AI Self-Improvement Loop",
    "nodes": [
        {
            "parameters": {
                "rule": {
                    "interval": [
                        {
                            "field": "hours",
                            "hoursInterval": 6
                        }
                    ]
                }
            },
            "name": "Every 6 Hours",
            "type": "n8n-nodes-base.scheduleTrigger",
            "position": [
                250,
                300
            ]
        },
        {
            "parameters": {
                "url": "={{$env.ARK_API_URL}}/api/ai/index",
                "method": "POST",
                "authentication": "predefinedCredentialType",
                "nodeCredentialType": "httpHeaderAuth",
                "options": {}
            },
            "name": "Index Ledger",
            "type": "n8n-nodes-base.httpRequest",
            "position": [
                450,
                300
            ]
        },
        {
            "parameters": {
                "url": "={{$env.ARK_API_URL}}/api/ai/suggestions",
                "method": "GET",
                "authentication": "predefinedCredentialType",
                "nodeCredentialType": "httpHeaderAuth",
                "options": {}
            },
            "name": "Get AI Suggestions",
            "type": "n8n-nodes-base.httpRequest",
            "position": [
                650,
                300
            ]
        },
        {
            "parameters": {
                "conditions": {
                    "number": [
                        {
                            "value1": "={{$json.data.count}}",
                            "operation": "larger",
                            "value2": 0
                        }
                    ]
                }
            },
            "name": "Has Suggestions?",
            "type": "n8n-nodes-base.if",
            "position": [
                850,
                300
            ]
        },
        {
            "parameters": {
                "functionCode": "// Create GitHub issue for each suggestion\nconst suggestions = $input.item.json.data.suggestions;\nconst issues = [];\n\nfor (const suggestion of suggestions) {\n  issues.push({\n    title: `[AI] ${suggestion.type}: ${suggestion.message}`,\n    body: `### AI-Detected Issue\\n\\n**Severity**: ${suggestion.severity}\\n\\n**Analysis**: ${suggestion.message}\\n\\n**Suggested Action**: ${suggestion.action}\\n\\n---\\n*Generated by GAIA NEXUS at ${new Date().toISOString()}*`,\n    labels: ['ai-generated', 'improvement', suggestion.severity.toLowerCase()]\n  });\n}\n\nreturn issues.map(issue => ({ json: issue }));"
            },
            "name": "Format GitHub Issues",
            "type": "n8n-nodes-base.code",
            "position": [
                1050,
                200
            ]
        },
        {
            "parameters": {
                "resource": "issue",
                "operation": "create",
                "owner": "={{$env.GITHUB_ORG}}",
                "repository": "The_Ark",
                "title": "={{$json.title}}",
                "body": "={{$json.body}}",
                "labels": "={{$json.labels}}"
            },
            "name": "Create GitHub Issue",
            "type": "n8n-nodes-base.github",
            "position": [
                1250,
                200
            ]
        },
        {
            "parameters": {
                "text": "ðŸŒŒ GAIA NEXUS completed analysis cycle\\n\\nðŸ“Š Indexed {{$node[\"Index Ledger\"].json.data.indexed}} new blocks\\nðŸ’¡ Found {{$node[\"Get AI Suggestions\"].json.data.count}} improvement suggestions\\nâœ… Created GitHub issues for review"
            },
            "name": "Log Completion",
            "type": "n8n-nodes-base.noOp",
            "position": [
                1050,
                400
            ]
        }
    ],
    "connections": {
        "Every 6 Hours": {
            "main": [
                [
                    {
                        "node": "Index Ledger",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "Index Ledger": {
            "main": [
                [
                    {
                        "node": "Get AI Suggestions",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "Get AI Suggestions": {
            "main": [
                [
                    {
                        "node": "Has Suggestions?",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "Has Suggestions?": {
            "main": [
                [
                    {
                        "node": "Format GitHub Issues",
                        "type": "main",
                        "index": 0
                    }
                ],
                [
                    {
                        "node": "Log Completion",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "Format GitHub Issues": {
            "main": [
                [
                    {
                        "node": "Create GitHub Issue",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "Create GitHub Issue": {
            "main": [
                [
                    {
                        "node": "Log Completion",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        }
    }
}